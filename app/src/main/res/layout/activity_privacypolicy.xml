<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        tools:context=".privacypolicy">
    <com.factor.bouncy.BouncyNestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageButton android:layout_width="50dp"
                         android:id="@+id/back_arrow"
                         android:src="@drawable/ic_baseline_arrow_back_ios_24"
                         android:background="#00FFFFFF"
                         android:layout_marginTop="80dp"
                         android:layout_height="50dp"/>

            <TextView
                    android:text="Privacy Policies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pptitle"
                    android:layout_alignParentEnd="true"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="80dp"
                    android:layout_alignParentStart="true"
            />

            <TextView
                    android:text="TextView"
                    android:layout_below="@id/pptitle"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" android:id="@+id/ppdes"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
            />
        </RelativeLayout>
    </com.factor.bouncy.BouncyNestedScrollView>
</RelativeLayout>