<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_1"
                android:id="@+id/bg_img"
                tools:context="com.nextap.startoff.MainActivity">


    <TextView
            android:id="@+id/user_name"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Hello"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_marginTop="160dp" android:layout_alignParentEnd="true"
            android:paddingHorizontal="20dp"
            android:layout_alignParentStart="true" />

    <TextView
            android:id="@+id/find_your_spec"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Find your specialist"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:layout_marginTop="200dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:paddingHorizontal="20dp"
            android:layout_alignParentStart="true" />

    <TextView
            android:id="@+id/title"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" android:layout_above="@+id/desc"
            android:layout_marginBottom="6dp" android:layout_alignParentEnd="true"
            android:paddingHorizontal="20dp"
            android:layout_alignParentStart="true" />
    <TextView
            android:id="@+id/desc"
            android:maxWidth="200dp"
            android:textSize="16sp"
            android:layout_width="354dp"
            android:layout_height="151dp"
            android:textAlignment="textStart"
            android:layout_marginBottom="139dp"
            android:textColor="#B8B8B8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="20dp" android:layout_marginStart="0dp" android:layout_marginEnd="0dp"/>
    <Button
            android:text="Startoff"
            android:background="@drawable/rectangle_send"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_marginBottom="78dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="157dp" android:layout_alignParentStart="true"
            android:layout_marginStart="157dp"/>

</RelativeLayout>